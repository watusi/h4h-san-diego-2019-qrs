<div class="container-fluid">

  <div class="row page-title">
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      <a href="<%= url_for :action => :show, :id => @capturedqr.object %>" class="btn btn-default btn-sm pull-left">Cancel</a>
    </div>
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <h3 class="text-center">Edit <%= @capturedqr.content %></h3>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      <a href="<%= url_for :action => :delete, :id => @capturedqr.object %>" class="btn btn-danger btn-sm pull-right">Delete</a>
    </div>
  </div>

  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @capturedqr.object %>"/>

    
        <div class="form-group">
          <label for="capturedqr[content]">Content</label>
          <input type="text" id="capturedqr[content]" name="capturedqr[content]" value="<%= @capturedqr.content %>" <%= placeholder( "Content" ) %> class="form-control" />
        </div>
    
        <div class="form-group">
          <label for="capturedqr[createdAt]">Createdat</label>
          <input type="text" id="capturedqr[createdAt]" name="capturedqr[createdAt]" value="<%= @capturedqr.createdAt %>" <%= placeholder( "Createdat" ) %> class="form-control" />
        </div>
    
    <button type="submit" class="btn btn-success btn-block">Update</button>
  </form>

</div>
